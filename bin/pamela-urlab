 XX    |X  X  X|    XX |       |       |       |       |~|
'''.splitlines()

table = {}
for form in letterforms:
    if '|' in form:
        table[form[-2]] = form[:-3].split('|')
ROWS = len(table.values()[0])

colors = ['\033[95m', '\033[94m', '\033[92m', '\033[93m', '\033[91m']


def horizontal(word):
    i = 0
    for row in range(ROWS):
        for c in word:
            print colors[i % len(colors)] + table[c][row],
            i += 1
        print
    print
    print '\033[0m'

if __name__ == '__main__':

    PAMELA_URL = "https://urlab.be/spaceapi.json"
    try:
        page = urllib.urlopen(PAMELA_URL)
        dictionnary = json.load(page)
    except:
        print("Network error")
    else:
        horizontal('UrLab')
        if (not dictionnary['sensors']['people_now_present'][0]['value']):
            print("      There isn't anybody there !")
        else:
            for pers in dictionnary['sensors']['people_now_present'][0]['names']:
                print("        - "+pers)
